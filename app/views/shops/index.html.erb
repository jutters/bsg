<h1>Listing shops</h1>

<table>
<% @shops.each do |shop| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(shop.image_url, class: 'list_image') %>
    </td>
    <td class="list_comment">
      <dl>
        <dt><%= shop.name %></dt>
        <dd><%= truncate(strip_tags(shop.comment), length: 80) %></dd>
      </dl>
    </td>
    <td class="list_actions">
      <%= link_to 'Show', shop %><br/>
      <%= link_to 'Edit', edit_shop_path(shop) %><br/>
      <%= link_to 'Destroy', shop, method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New shop', new_shop_path %>
