<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @shop.name %>
</p>
<p>
<strong>Site URL:</strong>
  <%= @shop.site_url %>
</p>
<p>
  <%= image_tag @shop.image_url.to_s %>
</p>
<p>
  <strong>Comment:</strong>
  <%= @shop.comment %>
</p>
<p>
  <strong>Insider Tip:</strong>
  <%= check_box :shop, :insider_tip, disabled: true %>€
</p>
<p>
  <strong>Price Segment:</strong>
  <%= check_box :shop, :price_segment_low, disabled: true %>€
  <%= check_box :shop, :price_segment_middle, disabled: true %>€€
  <%= check_box :shop, :price_segment_high, disabled: true %>€€€
